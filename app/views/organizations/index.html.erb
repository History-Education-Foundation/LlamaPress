<div class="w-full" data-llama="app/views/organizations/index.html.erb">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice" data-llama="app/views/organizations/index.html.erb"><%= notice %></p>
  <% end %>

  <% content_for :title, "Organizations" %>

  <div class="flex justify-between items-center" data-llama="app/views/organizations/index.html.erb">
    <h1 class="font-bold text-4xl" data-llama="app/views/organizations/index.html.erb">Organizations</h1>
    <%= link_to "New organization", new_organization_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="organizations" class="min-w-full" data-llama="app/views/organizations/index.html.erb">
    <% @organizations.each do |organization| %>
      <%= render organization %>
      <p data-llama="app/views/organizations/index.html.erb">
        <%= link_to "Show this organization", organization, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
