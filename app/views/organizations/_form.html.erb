<%= form_with(model: organization, class: "contents") do |form| %>
  <% if organization.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3" data-llama="app/views/organizations/_form.html.erb">
      <h2 data-llama="app/views/organizations/_form.html.erb"><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul data-llama="app/views/organizations/_form.html.erb">
        <% organization.errors.each do |error| %>
          <li data-llama="app/views/organizations/_form.html.erb"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5" data-llama="app/views/organizations/_form.html.erb">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/organizations/_form.html.erb">
    <%= form.label :city %>
    <%= form.text_field :city, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/organizations/_form.html.erb">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/organizations/_form.html.erb">
    <%= form.label :notes %>
    <%= form.text_area :notes, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/organizations/_form.html.erb">
    <%= form.label :state %>
    <%= form.text_field :state, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/organizations/_form.html.erb">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/organizations/_form.html.erb">
    <%= form.label :zip_code %>
    <%= form.text_field :zip_code, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/organizations/_form.html.erb">
    <%= form.label :email %>
    <%= form.text_field :email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline" data-llama="app/views/organizations/_form.html.erb">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
