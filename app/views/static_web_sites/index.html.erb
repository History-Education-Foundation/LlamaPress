<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Static web sites" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Static web sites</h1>
    <%= link_to "New static web site", new_static_web_site_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="static_web_sites" class="min-w-full">
    <% @static_web_sites.each do |static_web_site| %>
      <%= render static_web_site %>
      <p>
        <%= link_to "Show this static web site", static_web_site, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
