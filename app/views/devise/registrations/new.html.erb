<div class="min-h-screen flex flex-col items-center justify-center bg-gray-50 py-6 px-4 sm:px-6 lg:px-8">
  <div id="prompt-section" class="text-center max-w-4xl mx-auto">
    <img src="https://service-jobs-images.s3.us-east-2.amazonaws.com/7rl98t1weu387r43il97h6ipk1l7" alt="LlamaPress Logo" class="mx-auto w-16 h-16 sm:w-24 sm:h-24 mb-3 sm:mb-4">
    <h1 class="text-5xl sm:text-6xl font-bold text-gray-800 mb-4">Build a website in seconds.</h1>
    <p class="text-xl text-gray-600 mb-8">Build & publish new pages to your site in seconds.</p>
    
    <div class="bg-white p-6 rounded-lg shadow-md max-w-2xl mx-auto">
      <textarea id="website-prompt" class="w-full h-32 p-4 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" placeholder=""></textarea>
      <button onclick="showSignupForm()" class="mt-4 w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Generate your website
      </button>
    </div>
  </div>

  <div id="signup-section" class="hidden w-full max-w-md">
    <div class="bg-white p-6 sm:p-8 rounded-lg shadow-md">
      <div class="text-center mb-6 sm:mb-8">
        <img src="https://service-jobs-images.s3.us-east-2.amazonaws.com/7rl98t1weu387r43il97h6ipk1l7" alt="LlamaPress Logo" class="mx-auto w-16 h-16 sm:w-24 sm:h-24 mb-3 sm:mb-4">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800">Sign Up</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 sm:space-y-6" }) do |f| %>
        <input type="hidden" name="prompt" id="hidden-prompt">
        
        <!-- Error Messages Display -->
        <% if resource.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-circle text-red-400"></i>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(resource.errors.count, "error") %> prohibited this account from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% resource.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-envelope text-gray-400"></i>
            </div>
            <%= f.email_field :email, required: true, autocomplete: "email", class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm", placeholder: "you@example.com" %>
          </div>
        </div>

        <%= f.fields_for :organization_attributes do |org_f| %>
          <%= org_f.hidden_field :name, id: "hidden-org-name", value: "My Organization" %>
        <% end %>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-lock text-gray-400"></i>
            </div>
            <%= f.password_field :password, required: true, autocomplete: "new-password", class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm", placeholder: "••••••••" %>
          </div>
          <% if @minimum_password_length %>
            <p class="mt-1 text-sm text-gray-500">
              (<%= @minimum_password_length %> characters minimum)
            </p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-lock text-gray-400"></i>
            </div>
            <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm", placeholder: "••••••••" %>
          </div>
        </div>

        <%= f.submit "Create my website", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>

      <div class="mt-4 sm:mt-6 text-center text-sm text-gray-600">
        Already have an account? 
        <a href="#" onclick="showSigninForm()" class="font-medium text-indigo-600 hover:text-indigo-500">Sign in</a>
      </div>
    </div>
  </div>

  <div id="signin-section" class="hidden w-full max-w-md">
    <div class="bg-white p-6 sm:p-8 rounded-lg shadow-md">
      <div class="text-center mb-6 sm:mb-8">
        <img src="https://service-jobs-images.s3.us-east-2.amazonaws.com/7rl98t1weu387r43il97h6ipk1l7" alt="LlamaPress Logo" class="mx-auto w-16 h-16 sm:w-24 sm:h-24 mb-3 sm:mb-4">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-800">Sign In</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 sm:space-y-6", id: "signin-form" }) do |f| %>
        <input type="hidden" name="prompt" id="hidden-prompt-signin">

        <!-- Flash Messages for Sign In -->
        <% if flash[:alert] %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-circle text-red-400"></i>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700"><%= flash[:alert] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-envelope text-gray-400"></i>
            </div>
            <%= f.email_field :email, required: true, autocomplete: "email", class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm", placeholder: "you@example.com" %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-lock text-gray-400"></i>
            </div>
            <%= f.password_field :password, required: true, autocomplete: "current-password", class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm", placeholder: "••••••••" %>
          </div>
        </div>

        <%= f.submit "Sign in and create website", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <% end %>

      <div class="mt-4 sm:mt-6 text-center text-sm text-gray-600">
        Don't have an account? 
        <a href="#" onclick="showSignupForm()" class="font-medium text-indigo-600 hover:text-indigo-500">Sign up</a>
      </div>
    </div>
  </div>
</div>

<script>
const placeholders = [
  "Build me a landing page for my plumbing business...",
  "Create a website for my yoga studio with class schedules...",
  "I need a portfolio website to showcase my photography...",
  "Make a restaurant website with an online menu...",
  "Design a website for my real estate business..."
];

let currentPlaceholderIndex = 0;
let currentCharIndex = 0;
let isDeleting = false;
let typingSpeed = 50;
let deletingSpeed = 30;
let pauseBeforeDelete = 2000;
let pauseBeforeNextPhrase = 500;

function typeEffect() {
  const textarea = document.getElementById('website-prompt');
  const currentPlaceholder = placeholders[currentPlaceholderIndex];

  if (isDeleting) {
    // Deleting text
    currentCharIndex--;
    textarea.setAttribute('placeholder', currentPlaceholder.substring(0, currentCharIndex));
    
    if (currentCharIndex === 0) {
      isDeleting = false;
      currentPlaceholderIndex = (currentPlaceholderIndex + 1) % placeholders.length;
      setTimeout(typeEffect, pauseBeforeNextPhrase);
      return;
    }
    setTimeout(typeEffect, deletingSpeed);
  } else {
    // Typing text
    currentCharIndex++;
    textarea.setAttribute('placeholder', currentPlaceholder.substring(0, currentCharIndex));
    
    if (currentCharIndex === currentPlaceholder.length) {
      isDeleting = true;
      setTimeout(typeEffect, pauseBeforeDelete);
      return;
    }
    setTimeout(typeEffect, typingSpeed);
  }
}

// Start the typing effect when the page loads
document.addEventListener('DOMContentLoaded', function() {
  typeEffect();
  // Get the prompt from localStorage and set it in the hidden field
  const prompt = localStorage.getItem('website_prompt');
  if (prompt) {
    document.getElementById('hidden-prompt').value = prompt;
    document.getElementById('website-prompt').value = prompt;
  }
});

function showSigninForm() {
  const prompt = document.getElementById('website-prompt').value;
  if (prompt.trim() === '') {
    alert('Please enter your website idea first');
    return;
  }
  
  // Set the prompt in the hidden field
  document.getElementById('hidden-prompt-signin').value = prompt;
  
  // Hide prompt section and show signin form
  document.getElementById('prompt-section').classList.add('hidden');
  document.getElementById('signup-section').classList.add('hidden');
  document.getElementById('signin-section').classList.remove('hidden');
}

function showSignupForm() {
  const prompt = document.getElementById('website-prompt').value;
  if (prompt.trim() === '') {
    alert('Please enter your website idea first');
    return;
  }
  
  // Set the prompt in the hidden field
  document.getElementById('hidden-prompt').value = prompt;
  
  // Set a default organization name (will be updated when email is entered)
  document.getElementById('hidden-org-name').value = "My Organization";
  
  // Hide prompt section and show signup form
  document.getElementById('prompt-section').classList.add('hidden');
  document.getElementById('signin-section').classList.add('hidden');
  document.getElementById('signup-section').classList.remove('hidden');
  
  // Add event listener to email field to update organization name
  const emailField = document.querySelector('#user_email');
  if (emailField) {
    emailField.addEventListener('input', function(e) {
      const email = e.target.value;
      if (email && email.includes('@')) {
        const orgName = email.split('@')[0] + "'s Organization";
        document.getElementById('hidden-org-name').value = orgName;
      }
    });
  }
}
</script>
